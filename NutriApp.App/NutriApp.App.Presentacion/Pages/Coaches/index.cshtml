@page
@model NutriApp.App.Presentacion.Page.Coaches.indexModel
@{
    Layout = "_Layout";
}

<nav class="panel">
    <a class="btn-panel" asp-page="./index" asp-route-id="@Model.Coach.Id" data-content="Perfil" >Perfil</a> 
    <a class="btn-panel" asp-page="./Pacientes" asp-route-id="@Model.Coach.Id" data-content="Pacientes">Pacientes</a> 
    <a class="btn-panel" asp-page="./Config" asp-route-id="@Model.Coach.Id" data-content="Editar Perfil">Editar Perfil</a> 
    <a class="btn-panel" asp-page="../Login/index" data-content="Cerrar Sesión">Cerrar Sesión</a>
</nav>


<div class="perfilPaciente">
    <img src="~/assets/profile.png" class="img-perfil" alt="pefil">
    <div class="infoPerfil">
        <p id="Nombre">@Model.Coach.Nombre</p>
        <table>
            <tr>
                <td class="ident">Fecha de Nacimiento:</td>
                <td>@Model.Coach.FechaNacimiento.ToString("d")</td>
            </tr>
            <tr>
                <td class="ident">Telefono:</td>
                <td>@Model.Coach.Telefono</td>
            </tr>
            <tr>
                <td class="ident">Correo:</td>
                <td>@Model.Coach.Correo</td>
            </tr>
            <tr>
                <td class="ident">Especialización:</td>
                <td>@Model.Coach.Especializacion</td>
            </tr>
            <tr>
                <td class="ident">Tarjeta Profesional:</td>
                <td>@Model.Coach.TarjetaProfesional</td>
            </tr>
        </table>
    </div>
</div>
